VARIABLE total
VARIABLE subtotal
VARIABLE m
VARIABLE d

CREATE deck 4 , 4 , 4 , 4 , 4 , 4 , 4 , 4 , 4 , 16 ,

: deck-init
  9 0 DO
    4 I CELLS deck + !
  LOOP
  16 9 CELLS deck + !
;

: print-deck
10 0 DO
  I CELLS deck + @ .
LOOP
CR
;

deck-init

: cards CELLS deck + ;
: inc cards 1 SWAP +! ;
: dec cards -1 SWAP +! ;

: partitions

  subtotal !

  10 0 DO
    I CELLS deck + @ 0 > IF

      I 1 subtotal @ + + total !
      
      total @ 21 < IF
	1 m +!
	subtotal @ total @
        I dec
	partitions
	I inc
	subtotal !
      ELSE
	total @ 21 = IF
	  1 m +!
	THEN
      THEN
    THEN
  LOOP
;

VARIABLE n
0 n !

: deal
  10 0 DO
    I dec
    0 m !
    10 0 DO
      I dec
      1 I + partitions
      I inc
    LOOP
    m @ n +!
    ." Dealer " I . m @ . CR
    I inc
  LOOP ;
  
deal
." Total " n @ . CR
